<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="vkm.vkm">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_vkm_main_icon"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
                android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".LoginActivity"
                android:label="@string/title_activity_main">
        </activity>
        <activity android:name=".PagerActivity">
        </activity>
        <activity android:name=".ProxyActivity"
                  android:label="@string/select_proxy">
        </activity>
        <activity android:name=".MusicPlayerControl"
                  android:label="@string/select_proxy">
        </activity>

        <service android:name=".MusicPlayService"
                 android:description="@string/vkm_music_service_desc"
                 android:exported="false"
                 android:icon="@drawable/ic_service_icon"
        />
    </application>

</manifest>